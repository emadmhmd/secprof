{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "types": ["node", "jest"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true  ,
    "resolveJsonModule": true,
  }
}
